<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    ContentsMapper
-->
<mapper namespace="com.mugenunagi.amalbum.datamodel.dao.ContentsMapper">
	<!-- Contentsを検索する -->
	<select id="selectContentsByContentsGroupID" parameterType="contentsEntity" resultType="contentsEntity">
		select * from contents where contentsGroupID = #{contentsGroupID}
	</select>

	<!-- 指定IDのContentsを取得する-->
	<select id="getContentsByContentsID" parameterType="contentsEntity" resultType="contentsEntity">
		select * from contents where contentsID = #{contentsID}
	</select>
</mapper>
